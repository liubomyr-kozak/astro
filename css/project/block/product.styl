/*product*/
.product{
  position relative
  padding 20px  
  &:after{
    content:""
    display block
    position absolute
    left 50%
    top: 0;
    height 100%
    background #334777
    width 1px
  }
  
  &__di{
    float left
    width 50%

  }
  &__mixtapes{
    width 50%
    float right
    &:after{
      content:""
      display block
      position absolute
      height 100%
    }

  }
  &__title{
    font-size 36px
    text-align center
    height: 40px
    line-height: 40px
    u{
      text-decoration none
    }

  }
  &_tille__img{
    display block
    margin 0 auto
  }
  &_img__img{
    display block
    margin 0 auto
  }
  &__desc{
    max-width 360px
    margin 0 auto 20px

  }
  &__img{
    height 170px
    padding: 30px 0;
  }
}
