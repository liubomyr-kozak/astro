/*oside*/
.oslide{
  &,
  &__container{
   height 100%
   color #fff
  }

  &__text{
    float left
    width 50%
    height 100%
    position relative
  }
  &__iphone{
    float right
    width 50%
    height 100%
    position relative
    -webkit-: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    padding 20px 0
  }

  &__desc_title{ 
    font-size 24px 
    margin-top 20px
   
  }
  &-desc_icon{
    height: 44px;
    
    u{
      font-size 36px
      text-decoration none
    }
    [class^="icon"]{
      vertical-align: text-bottom;
      margin-right 10px
    }
  }

  &__desc_text{ 
    font-size 18px 
    margin-bottom 30px
    margin-top 20px
  }

  &__btn{
    width 90%
    height 41px
    border-radius 7px
    background-clip padding-box
    background-color #fff
    text-align: center;
    display block
    text-decoration: none;
    u{
      color #2c0c4d
      font-size 24px
      text-decoration: none;

    }
  }
  &_iphone__svg{
    position: absolute
  }
  &-btn__helper{
    a.link{
      color #fff
    }
  }
  &__title{
    font-size 60px
    text-align center
  }
  &_btn--product{
    max-width 360px
    margin 0 auto
  }
}