.container-bg {
  background-color: rgba(0, 0, 0, .14)
  position: relative
  min-height: 950px

  &:before, &:after {
    content: ''
    position: absolute
    top: 0
    background-repeat: no-repeat
    background-position: 0 0
    height: 950px
    width: 1px
  }
  &:before {
    left: 0
    background-image: url(img/bg-container--before.png)
  }
  &:after {
    right: 0
    background-image: url(img/bg-container--after.png)
  }
}

