/* row-profile */
.row-profile {
  position: relative
  clear: fix
  
  * {
    box-sizing: border-box
  }
  color: white
  
  &:before {
    content: ''
    position: absolute
    background-image: url(img/profile-row--separate.png)
    width: 1px
    height: 527px
    left: 50%
    top: 0
  }
}
.row-profile__block {}
.row-profile__col {
  width: 50%
  padding: 0 100px
}
.row-profile__col_dir_left {
  float: left
}
.row-profile__col_dir_right {
  float: right
}
.row-profile__title {
  font-weight: 300
  font-size: 36px
  color: white
}
.row-profile__list {
  border-top: 1px solid rgba(163, 150, 180, .4)
}
.row-profile__item {
  position: relative
  border-bottom: 1px solid rgba(163, 150, 180, .4)
  font-weight: 300
  padding: 1px
}
.row-profile__label {
  font-size: 24px
  color: white

  small {
    font-size: 13px
  }
  a {
    font-size: 15px

    &:visited, &:link {
      color: white
    }
    &:hover, &:focus {
      text-decoration: none
    }
  }
}
.row-profile__value {
  font-size: 20px
  color: #abb0bf
}
.row-profile__edit {
  position: absolute
  top: 0
  right: 0

  height: 50px
  width: 50px
  padding: 9px
  border-radius: 25px
  background-color: transparent
  transition: background ease .2s

  &:hover, &:focus {
    background-color: #6e738a
  }
}
/* / row-profile */
